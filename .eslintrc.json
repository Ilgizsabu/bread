{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 15,
        "sourceType": "module"
    },
    "plugins": ["import"],
    "rules": {
        "import/no-extraneous-dependencies": ["error"]
    },
    "overrides": [
        {
            "files": ["webpack.*.js", "*.config.js"],
            "rules": {
                "import/no-extraneous-dependencies": ["error", {
                    "devDependencies": true
                }]
            }
        }
    ]
}
